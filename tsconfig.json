{
  "compilerOptions": {
    "module": "commonjs",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@analytics/*": ["src/analytics/*"],
      "@actions/*": ["src/actions/*"],
      "@components/*": ["src/components/*"],
      "@reducers/*": ["src/reducers/*"],
      "@sagas/*": ["src/sagas/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dest",
    "android",
    "ios",
    "acceptance-tests",
    ".jest",
    "src/setupTests.ts",
    "./node_modules/**/*",
    "babel.config.js", "metro.config.js", "jest.config.js"
  ],
  "include": ["./node_modules/@types", "./src/**/*", "./src/types"]
}
